<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"> <!--设置只有底部有边框-->

        <shape>
            <solid android:color="#FB3445" />
        </shape>
    </item>
</layer-list>