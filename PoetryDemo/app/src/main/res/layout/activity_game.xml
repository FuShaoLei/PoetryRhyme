<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme">

    <ImageView
        android:id="@+id/img_game_back2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/leftwhite" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:padding="25dp">

        <TextView
            android:id="@+id/tv_game_daojishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="15"
            android:textColor="#fff"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/img_game_correct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/correct"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_game_incorrect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/incorrect02"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="落花人独立，微雨_双飞"
            android:textColor="#fff"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空格里应填的是:"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/et_game_you_anwser"
                android:textColor="#fff"
                android:textSize="20dp"
                android:inputType="text"
                android:hint="请输入"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_game_done"
            android:text="确认"
            android:layout_marginTop="220dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="50dp" />



    </RelativeLayout>


</RelativeLayout>