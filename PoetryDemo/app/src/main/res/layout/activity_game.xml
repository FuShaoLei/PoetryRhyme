<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme">

    <ImageView
        android:id="@+id/img_game_back2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/leftwhite" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="25dp">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="第 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_game_problem_num"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#fff"
                android:textSize="20dp"
                android:text=" 题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_game_daojishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="15"
            android:textColor="#fff"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/img_game_correct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/correct"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_game_incorrect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/incorrect02"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="落花人独立，微雨_双飞"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空格里应填的是:"
                android:textColor="#fff"
                android:textSize="20dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/et_game_you_anwser"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="请输入"
                android:inputType="text"
                android:textColor="#fff"
                android:textSize="16dp"
                android:background="@color/colorTheme"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_game_done"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:text="确认"
            android:textColor="@color/colorTheme"
            android:background="@drawable/circler_game"
            android:alpha="0.9"/>


    </RelativeLayout>


</RelativeLayout>