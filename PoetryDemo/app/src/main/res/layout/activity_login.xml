<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:clickable="true"
            android:id="@+id/login_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/left3" />

        <TextView
            android:id="@+id/login_title"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="手机号登录/注册"
            android:textColor="#333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/login_switch"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="密码登录"
            android:textColor="#333"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_one"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="+86"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:inputType="number"
                android:id="@+id/et_phone"
                android:textColor="#333"
                android:textSize="15dp"
                android:hint="请输入手机号"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <View
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#F0F0F5"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_msg"
                android:textColor="#DA2D3C"
                android:clickable="true"
                android:gravity="center"
                android:text="获取验证码"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:layout_weight="7"
                android:id="@+id/et_msg"
                android:textColor="#333"
                android:textSize="15dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circler_red"
            android:text="验证登录/注册"
            android:textColor="#fcfcfc"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_two"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="用户名："
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:inputType="text"
                android:id="@+id/et_name"
                android:textColor="#333"
                android:textSize="15dp"
                android:hint="请输入用户名"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="密码:"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:inputType="textPassword"
                android:layout_weight="5"
                android:id="@+id/et_pwd"
                android:textColor="#333"
                android:textSize="15dp"
                android:background="@null"
                android:hint="请输入密码"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circler_red"
            android:text="登录"
            android:textColor="#fcfcfc"
            android:textSize="17dp" />
    </LinearLayout>




</LinearLayout>