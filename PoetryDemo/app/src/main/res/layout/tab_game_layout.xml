<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DA2D3C">
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gamer_logo"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/btn_into_game"
        android:layout_marginBottom="170dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:text="进入游戏 "
        android:layout_centerHorizontal="true"
        android:background="@drawable/circler_game"
        android:layout_width="200dp"
        android:layout_height="50dp" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#fb3445"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="30dp"
                android:id="@+id/linear_game_paihang"
                android:layout_toLeftOf="@+id/linear_game_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/game_paihang"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:textColor="#fff"
                    android:text="排行榜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:id="@+id/linear_game_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/game_box"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:textColor="#fff"
                    android:text="更多"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>