<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:clickable="true"
            android:id="@+id/password_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/left3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:text="修改密码"
            android:textColor="#333"
            android:textSize="18dp" />
    </LinearLayout>





    <LinearLayout
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pwd_pass_pwd"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="旧密码"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/pwd_old"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="30dp"
                android:background="#fff"
                android:hint="请输入旧密码"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="新密码"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <EditText
                android:id="@+id/pwd_new"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="30dp"
                android:background="#fff"
                android:hint="请输入新密码"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:layout_marginTop="0dp"

            android:layout_width="390dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView

                android:layout_weight="2"
                android:gravity="center"
                android:text="确认新密码"
                android:layout_width="0dp"
                android:layout_height="match_parent"  />

            <EditText
                android:id="@+id/pwd_new_true"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:hint="请再次输入新密码"
                android:textSize="15sp"/>
        </LinearLayout>


        <Button
            android:id="@+id/pwd_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circler_red"
            android:text="确认修改"
            android:textColor="#fcfcfc"
            android:textSize="17dp"/>

    </LinearLayout>
</LinearLayout>